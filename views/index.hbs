            <div class="information">
                <div class="information-info info1">
               
                    <h2>min-temp <i class="fa-solid fa-temperature-low"></i> </h2>
                   <p id="min-temp"></p>
                 </div>
                 <hr class="divider">
                <div class="information-info info2">
                    <h2>max-temp <i class="fa-solid fa-temperature-full"></i></h2>   
                   <p id="max-temp"></p>
                </div>
                <hr class="divider">
                <div class="information-info info3">
                    <h2>humidity <i class="fa-solid fa-droplet"></i></h2> 
                    <p id="humidity"></p>
                </div>
                <hr class="divider">
                <div class="information-info info4">
                    <h2>wind  <i class="fa-solid fa-wind"></i></h2>
                    <p id="speed"></p> 
                </div>
                <hr class="divider">
                <div class="information-info info5">
                    <h2>wheater  <i class="fa-solid fa-cloud"></i></h2>
                    <p id="discription"></p>
                </div>
            </div>
        </div>
        <div class="item4">
            <h2>TimeZone</h2>
            <div class="information"> 
            <div class="information-info">
                <h2>sunrise</h2>
                <i class="fa-solid fa-sun sun"></i>
                <p id="sunrise"></p>
            </div>
            <div class="information-info">
